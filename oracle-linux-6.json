{
  "variables": {
    "iso_location": "iso",
    "harddisk_size": "50960",
    "vm_name": "oracle-linux-6"
  },
  "builders": [{
    "vm_name": "{{user `vm_name`}}",
    "output_directory": "build/{{user `vm_name`}}",
    "type": "virtualbox-iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": false,

    "guest_os_type": "Oracle_64",

    "hard_drive_interface": "sata",
    "disk_size": "{{user `harddisk_size`}}",

    "iso_url": "{{user `iso_location`}}/OracleLinux-R6-U7-Server-x86_64-dvd.iso",
    "iso_checksum": "5871e01fc4c90d7c976c133758bba46d4153689c086d4fe03cbf3295b457f3a7",
    "iso_checksum_type": "sha256",

    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/OEL6_7-x86_64/ks.cfg<enter><wait>"
    ],
    "boot_wait": "12s",

    "http_directory": "http",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "2048"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],

    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/common/sshd.sh",
      "scripts/common/networking.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/vmtools.sh",
      "scripts/common/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }]
}
